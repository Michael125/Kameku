	background-image url(../img/base/all.png)
	background-position 0px 0px
	background-repeat no-repeat
	background-size 100%
	height 179px
	margin 0 auto
	position relative
	top -50px
	width 315px

.img-diseno
	background-image url(../img/base/all.png)
