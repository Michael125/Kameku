@import "normalize.styl"
@import "font.styl"

verde = #8DB335
verdec = rgba(141,179,53,.5)
gris = #5B5B5E
cafe = #3D382A

kamep = smartk0dregular
kames-regular = LithosProRegular
kames-bold = LithosPro850

a 
	text-decoration none
body
	background-color rgba(141,179,53,.2)
	font-size 14px
	overflow-y hidden 
	text-align center

figure
	margin 0


// clses generales

